




















































                               <script>

            document.documentElement.className ="has-js " + document.documentElement.className;

            var _redirect = { isMobileFromUA : "", lang : "en",  langSrv : "en", baseURL : "http://www.minuteofsilence.com.au", isMobile : false, hasPushstate  : !!(window.history && history.pushState) };

            //JS redirection
            if ( _redirect.isMobileFromUA ) /* Mobile */ 
               _redirect.isMobile = true;

            if( _redirect.isMobile )
            {
                window.location = _redirect.baseURL + "/mobile/?lang=" + _redirect.langSrv;
            }  

            if (navigator.userAgent.match(/iPad;.*CPU.*OS 7_\d/i)) {
                document.documentElement.className = "ipad ios7 " + document.documentElement.className;
            }

        </script>


















































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































