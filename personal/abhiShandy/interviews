    <script>
    
	    var aScript = [
			 
				"http://www.minuteofsilence.com.au/js/RSL.libIE.min.js"    , 
			 
				"http://www.minuteofsilence.com.au/js/RSL.lib.min.js"    , 
			 
				"http://www.minuteofsilence.com.au/js/RSL.min.js"   
			
		];

		var aScriptOnlyIE = [{"src":"/js/RSL.lib.js","ie":"/js/RSL.libIE.js"},{"src":"/js/RSL.lib.min.js","ie":"/js/RSL.libIE.min.js"}];

		//delete some scripts

		if( document.documentElement.className.indexOf("lt-ie9") > -1 ) //IE < 9
		{
			
			for (var i in aScriptOnlyIE)
			{
				var scriptIE = aScriptOnlyIE[i];

				for(var j in aScript)
				{
					var script = aScript[j];

					//match
					if( script.indexOf(scriptIE.src) > -1 )
					{
						//delete it from the array of Loading scripts
						aScript.splice(j, 1);
					}


				}
			}
		}
		else
		{
			for (var i in aScriptOnlyIE)
			{
				var scriptIE = aScriptOnlyIE[i];

				for(var j in aScript)
				{
					var script = aScript[j];

					//match
					if( script.indexOf(scriptIE.ie) > -1 )
					{
						//delete it from the array of Loading scripts
						aScript.splice(j, 1);
					}


				}
			}
		}

		head.load(aScript, function(e){

			$(document).ready( RSL.main.onReady.bind(RSL.main) );

		} );
		
		
	</script>
